<style type="text/css">
    #topNav{display:none;}
</style>
<div class="_h-100">
  <div class="container h-100">
    <div class="d-flex justify-content-center h-100">
      <div class="user_card">
        <div class="d-flex justify-content-center">
          <div class="brand_logo_container back_">
            <%= image_tag 'valintanana.png', class:'login-logo' %>
          </div>
        </div>
        <div class="d-flex justify-content-center form_container">
          <%= form_for(resource, as: resource_name, class: "form-signin", url: session_path(resource_name)) do |f| %>
            <div class="input-group mb-3">
              <div class="input-group-append">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
              </div>
              <%= f.email_field :email, class: "form-control input_user" ,autofocus: true, autocomplete: "email" %>
            </div>
            <div class="input-group mb-2">
              <div class="input-group-append">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
              </div>
              <%= f.password_field :password, class: "form-control input_pass" ,autocomplete: "current-password" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group _trans">
                <div class="custom-control custom-checkbox">
                    <%= f.check_box :remember_me, class: "custom-control-input" %>
                  </div>
                
                  <label class="custom-control-label" for="customControlInline">Remember me</label>
              </div>
              <% end %>
              <div class="d-flex justify-content-center mt-3 login_container">
                <%= f.submit "Log in", class:"btn login_btn btn-new-up" %>
              </div>
          <% end %>
        </div>
    
        <div class="mt-4">
          <div class="d-flex justify-content-center links">
            Don't have an account? <a href="/users/sign_up" class="ml-2">Sign Up</a>
          </div>
          <div class="d-flex justify-content-center links">
            <a href="#">Forgot your password?</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>